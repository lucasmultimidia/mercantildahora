
<div class="row">
  <div class="col-lg-12">
    <div class="card p-5">
        <%= form_with(model: client, local: true) do |form| %>
          <% if client.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(client.errors.count, "error") %> prohibited this product from being saved:</h2>
        
              <ul>
              <% client.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
        
        <div class="field">
          <%= form.label :name %>
          <%= form.text_field :name %>
        </div>

        <div class="field">
          <%= form.label :date %>
          <%= form.date_select :date %>
        </div>
        
          <div class="actions">
            <%= form.submit "Enviar", class: "btn btn-primary" %>
            <%= link_to 'Voltar', clients_path, class:'btn btn-primary' %>
          </div>
        <% end %>
    </div>
  </div>
</div>