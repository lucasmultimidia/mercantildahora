<h1> Estoque</h1>
<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <table lass="table">
        <tr>
          <td><b>Nome:</b></td>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <td><b>Referencia:</b></td>
          <td> <%= @product.description %></td>
        </tr>
      </table>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-lg-12">
    <div class="card p-5">
      <%= form_with model: @movement, url: creat_movement_product_path(@product) do |f| %>
          <div class="form-group">
            <%= f.label :movement_ytpe, "tipo de Estoque" %>
            <%= f.select :movement_type, options_for_select(Movement.get_movement_types), {}, {class: 'form-control'} %>
          </div>

          <div class="form-group">
            <%= f.label :quantity, "Quantidade" %>
            <%= f.number_field:quantity, {class: 'form-control'} %>
          </div>

          <div class="form-group">
            <%= f.submit 'Salvar', class: 'btn btn-primary' %>
            <%= link_to 'Cancelar', product_path(@product), class: 'btn btn-danger' %>
            <%= link_to 'Voltar', products_path, class:'btn btn-primary' %>
          </div>


      <% end %>
    </div>
  </div>
</div>
