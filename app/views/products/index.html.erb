
<h1> Lista de produtos</h1>
<a href="<%= new_product_path %>" class="btn btn-primary btn-icon-split">
  <span class="icon text-white-50">
        <i class="fas fa-flag"></i>
  </span>
  <span class="text">Criar produto</span>
</a>


<br>
<br>
<table class="table">
  <thead>
    <tr>
        <th>Nome</th>
        <th>Preço</th>
        <th>Descrição</th>
        <th> Unidades</th>
        <th>Editar</th>
        <th>Deletar</th>
        <th>Estoque</th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.quantity %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Deletar', product, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
        <td><%= link_to "Estoque", new_movement_product_path(product) %></td>
    </tr>
    <% end %>
  </tbody>
</table>